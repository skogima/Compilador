<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Compiler">

    <FontFamily x:Key="Monaco">pack://application;,,,/Fonts/#Monaco</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="CodeFont">
        <Setter Property="FontFamily" Value="{StaticResource Monaco}" />
    </Style>
</ResourceDictionary>